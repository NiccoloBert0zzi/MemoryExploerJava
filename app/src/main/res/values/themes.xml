<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile_MemoryExplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/indigo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
    </style>
    <style name="ScreenBackground">
        <item name="android:background">@color/white</item>
    </style>
    <style name="Theme.Mobile_MemoryExplorer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mobile_MemoryExplorer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mobile_MemoryExplorer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>